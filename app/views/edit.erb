  <label for="name">Name</label><br>
  <input id="name" type="text" value="<%=@recipe.name%>" name="name"><br>
  <label for="ingredients">Content</label><br>
  <input id="ingredients" type="text" value="<%=@recipe.ingredients%>" name="ingredients"><br>
  <label for="cook_time">Content</label><br>
  <input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="cook_time"><br>
  <input type="submit" value="submit">
</form>
